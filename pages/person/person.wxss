/* person.wxss */
page {
  height: 100%;
  background-color: #f0f0f0
}
.head {
  width: 50px;
  height: 50px;
  border-radius: 5px;
}
.list {
  height: 43px;
  padding: 0 15px;
  border-bottom: 1px solid #c3c3c3;
  background-color: #fff;
  line-height: 0;
  font-size: 14px;
}
.list.first {
  height: 65px;
}
.text {
  width: 20%;
  color: #666666;
  margin-right: 15px;
}
.last {
  margin: 15px 0;
}
.exit {
  position: fixed;
  bottom: 0;
  width: 100%;
  height: 40px;
  line-height: 40px;
  background-color: #fff;
  color: #e72a2a;
  font-size: 16px;
  text-align: center
}